# SOCAR Document Processing - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Azure AI Foundry Configuration
# ============================================================================
BASE_URL=https://llmapihackathon.services.ai.azure.com/
API_KEY=your_api_key_here
API_VERSION=2024-12-01-preview

# ============================================================================
# Model Configuration (Open Source preferred for higher scores)
# ============================================================================
# OCR Model - Must support vision/multimodal
OCR_MODEL=Llama-4-Maverick-17B-128E-Instruct-FP8

# Chat Model - For RAG responses
CHAT_MODEL=Llama-4-Maverick-17B-128E-Instruct-FP8

# Embedding Model - For vector search (1024 dimensions)
EMBEDDING_MODEL=BAAI/bge-large-en-v1.5

# ============================================================================
# OCR Settings
# ============================================================================
# DPI scale for PDF rendering (higher = better quality, larger images)
OCR_DPI_SCALE=1.5

# Maximum tokens for OCR output
OCR_MAX_TOKENS=4000

# JPEG quality for image compression (0-100)
JPEG_QUALITY=90

# ============================================================================
# Knowledge Base Settings
# ============================================================================
# Text chunk size for embedding
CHUNK_SIZE=1000

# Overlap between chunks
CHUNK_OVERLAP=200

# Number of results to retrieve
TOP_K_RESULTS=5

# ============================================================================
# API Server Settings
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000


